                    <td colspan="1"> <input name="bt" type="submit" value="9"/> </td>
                    <td colspan="1"> <input name="bt" type="submit" value=":"/> </td>
                    <td colspan="1"> <input name="bt" type="submit" value="-/+"/> </td>
                </tr>
            </table>
        </form>
    </div>
